{erl_opts, [
	warnings_as_errors,
	warn_export_all
]}.

{post_hooks, [{clean, "rm -fr _build ebin doc priv erl_crash.dump *.json c_src/*.o c_src/*.d"}]}.

{plugins, [pc]}.

{provider_hooks, [
    {pre, [
        {compile, {pc, compile}},
        {clean,   {pc, clean}}
    ]}
]}.

{pre_hooks, [{clean, "rm -fr ebin priv erl_crash.dump"}]}.
